<style>
    /*Index.ejs starts here*/

    .row{
        margin-left:0px;
        margin-right:0px;
    }

    #wrapper {
        padding-left: 70px;
        transition: all .4s ease 0s;
        height: 100%
    }

    #sidebar-wrapper {
        margin-left: -150px;
