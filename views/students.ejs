        <div class="page-content inset">
            <div class="row">
                <div class="col-md-12">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Student Datatable</h4>
                                <div class="table-responsive">
                                    <table id="mytable" class="table table-bordred table-striped">
                                        <thead>

                                        <th><input type="checkbox" id="checkall" /></th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Sex</th>
                                        <th>Age</th>
                                        <th>Course</th>
                                        <th>More</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                        </thead>
                                        <tbody>
                                        <% students.forEach(function (student) { %>
                                        <tr>
                                            <td><input type="checkbox" class="checkthis" /></td>
                                            <td><%= student.fname %></td>
                                            <td><%= student.lname %></td>
                                            <td><%= student.sex %></td>
                                            <td><%= student.age %></td>
                                            <td><%= student.course %></td>
                                            <td> <a class="btn btn-primary" href="/students/<%= student._id %>">More Info</a> </td>
                                            <td>
                                                <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                    <a href="/students/<%= student._id %>/edit" class="btn btn-primary btn-xs" data-title="Edit" >
                                                        <span class="glyphicon glyphicon-pencil"></span>
                                                    </a>
                                                </p>
                                            </td>
                                            <td>
                                                <form action="/students/<%= student._id %>?_method=DELETE"  method="POST">
                                                    <p data-placement="top" data-toggle="tooltip" title="Delete">
                                                        <button class="btn btn-danger btn-xs" data-title="Delete" >
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                        </button>
                                                    </p>
                                                </form>
                                            </td>
                                        </tr>
                                        </tbody>
                                        <% }); %>
                                    </table>

                                    <div class="clearfix"></div>
                                    <ul class="pagination pull-right">
                                        <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
